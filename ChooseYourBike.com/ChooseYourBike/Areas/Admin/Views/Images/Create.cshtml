@model ChooseYourBike.Models.Image

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm("Create", "Images", FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Image</h4>
            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.Image_ID, "Image_ID", htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.DropDownList("Image_ID", null, htmlAttributes: new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Image_ID, "", new {@class = "text-danger"})
                </div>
            </div>
            @*-------------------------------------------------*@
            <div class="form-group">
                @Html.Label("Image", new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    <input type="file" name="file" id="file" class="btn btn-default"/>
                </div>
            </div>
            @*-------------------------------------------------*@
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
